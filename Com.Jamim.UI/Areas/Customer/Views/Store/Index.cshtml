@using Com.Jamim.Controllers.Customer.ViewModels.Store
@using Com.Jamim.Services.Customer.ViewModels
@model StorePageView

@{
    Layout = null;
}

@helper CreateStoreTiles(IEnumerable<StoreView> storeViews)
{
    foreach (StoreView v in storeViews)
    {
        <div class="col-md-4">
            <div class="shoptile bg-img-3">
                <div class="fnv-label">
                    f&amp;v
                </div>
            </div>
            <div class="tilefooter tilefooterfnv">
                <div class="shoptitle">
                   
                    @Html.ActionLink(v.Name, "Index", "Catalog", new { @area = "Customer", @Id = v.RetailerId },null)
                    <div class="pull-right rating">&nbsp; &#9733;&nbsp;&#9733;&nbsp;&#9733;</div>
                </div>

                <div class="shopwidget pull-left text-center"><i class="fa fa-gift"></i>&nbsp;offers</div>
                <div class="shopwidget pull-left text-center"><i class="fa fa-edit"></i>&nbsp;reviews</div>
                <div class="shopwidget pull-right text-center"><i class="fa fa-map-marker"></i>&nbsp;20 mins</div>
            </div>

        </div>
    }
}


